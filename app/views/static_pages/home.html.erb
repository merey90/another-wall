<div  ng-app="flapperNews" ng-controller="mainCtrl">
    <div ng-repeat="post in posts | orderBy: '-upvotes'">
        <span ng-hide="post.link">{{post.title}}</span>
        <a ng-show="post.link" href="{{post.link}}">{{post.title}}</a>
        <i class="fa fa-thumbs-o-up btn btn-xs btn-default" ng-click="postVote(post)"> {{post.upvotes}}</i>
    </div>
    
    <form class="form" ng-submit="addPost()">
        <h3>Add a new post</h3>
        <div class="form-group">
            <input class="form-control" type="text" name="title" ng-model="title" placeholder="Title">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="link" ng-model="link" placeholder="Link">
        </div>
        <button tupe="submit" class="btn btn-default">Add POST</button>
    </form>
</div>